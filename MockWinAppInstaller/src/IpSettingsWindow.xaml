<Window x:Class="MockWinAppInstaller.IpSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Source={StaticResource Loc}, Path=IpDialogTitle}"
    Width="350" Height="200" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False" Background="{DynamicResource InstallerWindowBackground}">
    <Border Margin="12" Padding="12" BorderBrush="{DynamicResource InstallerBorderBrush}" BorderThickness="1" Background="{DynamicResource InstallerCardBackground}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,6,6" Text="{Binding Source={StaticResource Loc}, Path=IpDialogCurrentIp}"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ConnectionIp}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,6,6" Text="{Binding Source={StaticResource Loc}, Path=IpDialogNewIp}"/>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                <TextBox x:Name="Octet1Box" Width="50" Margin="0,0,4,0" Text="{Binding NewIpOctet1, UpdateSourceTrigger=PropertyChanged}" TabIndex="0" IsEnabled="{Binding IsIpEditingEnabled}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Foreground" Value="{DynamicResource InstallerForegroundBrush}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOctet1Invalid}" Value="True">
                                    <Setter Property="Foreground" Value="Red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock Text="." VerticalAlignment="Center"/>
                <TextBox x:Name="Octet2Box" Width="50" Margin="4,0,4,0" Text="{Binding NewIpOctet2, UpdateSourceTrigger=PropertyChanged}" TabIndex="1" IsEnabled="{Binding IsIpEditingEnabled}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Foreground" Value="{DynamicResource InstallerForegroundBrush}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOctet2Invalid}" Value="True">
                                    <Setter Property="Foreground" Value="Red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock Text="." VerticalAlignment="Center"/>
                <TextBox x:Name="Octet3Box" Width="50" Margin="4,0,4,0" Text="{Binding NewIpOctet3, UpdateSourceTrigger=PropertyChanged}" TabIndex="2" IsEnabled="{Binding IsIpEditingEnabled}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Foreground" Value="{DynamicResource InstallerForegroundBrush}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOctet3Invalid}" Value="True">
                                    <Setter Property="Foreground" Value="Red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock Text="." VerticalAlignment="Center"/>
                <TextBox x:Name="Octet4Box" Width="50" Margin="4,0,0,0" Text="{Binding NewIpOctet4, UpdateSourceTrigger=PropertyChanged}" TabIndex="3" IsEnabled="{Binding IsIpEditingEnabled}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Foreground" Value="{DynamicResource InstallerForegroundBrush}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOctet4Invalid}" Value="True">
                                    <Setter Property="Foreground" Value="Red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>

            <CheckBox Grid.Row="2" Grid.ColumnSpan="2" Content="{Binding Source={StaticResource Loc}, Path=IpDialogUsbUse}" IsChecked="{Binding IsUsbUseChecked}" Margin="0,8,0,0"/>
            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="{Binding Source={StaticResource Loc}, Path=IpDialogSave}" Command="{Binding SaveIpSettingsCommand}" MinWidth="70" Margin="0,0,8,0"/>
                <Button Content="{Binding Source={StaticResource Loc}, Path=IpDialogCancel}" Command="{Binding CancelIpSettingsCommand}" MinWidth="70"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>